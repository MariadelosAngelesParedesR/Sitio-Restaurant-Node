<div class="container" style="margin-top: 50px ;">
    {{!--inicio fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-end"><span> Hola  {{nombre}}!! </span><a href="/admin/login/logout" class="btn btn-danger">cerrar sesi√≥n</a></p>
        </div>
    </div>
    {{!--fin fila 1 --}}

    {{!--inicio fila 2--}}
    <div class="row">
        <div class="col-7">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end"><a href="/admin/nuevo" class="btn btn-dark">Nuevo</a>
        </div>
    </div>
    {{!--fin fila 2 --}}
    {{#if novedades}}
    <table class="table">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Subtitulo</th>
                <th>Noticia</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <td>
                    {{titulo}}
                </td>
                <td>
                    {{subtitulo}}
                </td>
                <td>
                    {{noticia}}
                </td>
                <td>
                    <a href="/admin/editar/{{id}}" class="btn btn-warning">
                      <i class="fas fa-pencil-alt"></i>
                      </a>
                    <a href="/admin/eliminar/{{id}}" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}} <p class="text-center">Sin Novedades, crea una</p>
    {{/if}}
    </div>
