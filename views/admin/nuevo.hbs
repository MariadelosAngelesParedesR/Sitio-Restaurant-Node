<div class="container">
    <h2 class="text-center">Mis Portafolios</h2>
    <div class="row">
        <div class="col-md-6 mx-auto">

            {{#if error}}
            <div class="alert alert-danger text-center" role="alert">
                Todos los campos son obligatorios
            </div>
            {{/if}}
            <form action="/admin/nuevo" method="POST">
                <div class="form-group"><input type="text" name="titulo" placeholder="Titulo" class="form-control">
                </div>
                <div class="form-group"><input type="text" name="subtitulo" placeholder="Subtitulo"
                        class="form-control"></div>
                <div class="form-group"><textarea name="noticia" rows="4" placeholder="Noticia"
                        class="form-control"></textarea></div>
                <div class="mt-4"><input type="submit" value="Guardar" class="btn btn-danger"></div>
            </form>
        </div>
    </div>
</div>